<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    tools:context=".TableActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:textSize="20dp"
        android:id="@+id/textView"
        />

    <TableRow>

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="AC"
            android:textSize="20dp"
            android:background="@color/colorBotonGris"
            android:textColor="@android:color/white"
            android:id="@+id/botonAC"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="+/-"
            android:textSize="20dp"
            android:background="@color/colorBotonGris"
            android:textColor="@android:color/white"
            android:id="@+id/botonMasMenos"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="%"
            android:textSize="20dp"
            android:background="@color/colorBotonGris"
            android:textColor="@android:color/white"
            android:id="@+id/botonPorcentaje"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="/"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonDividir"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="SEN"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonSen"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="X!"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonFactorial"
            />

    </TableRow>

    <TableRow>

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="7"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton7"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="8"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton8"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="9"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton9"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="X"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonMultiplicar"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="COS"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonCos"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="E"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonE"
            />

    </TableRow>

    <TableRow>

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="4"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton4"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="5"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton5"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="6"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton6"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="-"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonMenos"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="TAN"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonTan"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="X3"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonX3"
            />

    </TableRow>

    <TableRow>

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="1"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton1"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="2"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton2"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="3"
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton3"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="+"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonMas"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="SQR"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonSQR"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:text="X2"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonX2"
            />

    </TableRow>

    <TableRow
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="0"
            android:textSize="20dp"
            android:layout_weight="0.35"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/boton0"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:text=","
            android:textSize="20dp"
            android:background="@color/colorBotonBlanco"
            android:id="@+id/botonComa"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:text="RAD"
            android:textSize="20dp"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonRAD"
            />

        <Button
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="="
            android:textSize="20dp"
            android:layout_weight="0.35"
            android:background="@color/colorBotonNaranja"
            android:textColor="@android:color/white"
            android:id="@+id/botonIgual"
            />

    </TableRow>


</TableLayout>